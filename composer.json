{
    "name": "clarkwinkelmann/flarum-ext-formatted-banner",
    "description": "Customizable welcome banner for Flarum",
    "keywords": [
        "flarum",
        "banner"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-formatted-banner"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\FormattedBanner\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Formatted Banner",
            "category": "feature",
            "icon": {
                "name": "fas fa-bullhorn",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            }
        }
    }
}
